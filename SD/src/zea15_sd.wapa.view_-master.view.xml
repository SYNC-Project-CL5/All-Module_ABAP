<mvc:View controllerName="sync.ea.b2csalesorder.controller.Master"                                                                                                                                                                                             
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"                                                                                                                                                                                                            
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:f="sap.f">                                                                                                                                                                                                                                           
    <!-- <Page id="page" title="{i18n>title}">                                                                                                                                                                                                                 
        <content />                                                                                                                                                                                                                                            
    </Page> -->                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
    <f:DynamicPage id="idDynamicPage" toggleHeaderOnTitleClick="false">                                                                                                                                                                                        
		<!-- DynamicPage Title -->                                                                                                                                                                                                                                   
		<f:title>                                                                                                                                                                                                                                                    
			<f:DynamicPageTitle>                                                                                                                                                                                                                                        
				<f:heading>                                                                                                                                                                                                                                                
					<Title text="{i18n>title}"/>                                                                                                                                                                                                                              
				</f:heading>                                                                                                                                                                                                                                               
			</f:DynamicPageTitle>                                                                                                                                                                                                                                       
		</f:title>                                                                                                                                                                                                                                                   
                                                                                                                                                                                                                                                               
        <f:content>                                                                                                                                                                                                                                            
			<VBox fitContainer="true">                                                                                                                                                                                                                                  
                <!-- <OverflowToolbar class="sapFDynamicPageAlignContent">                                                                                                                                                                                     
					<ToolbarSpacer/>                                                                                                                                                                                                                                          
					<SearchField search=".onSearch" width="17.5rem"/>                                                                                                                                                                                                         
				                                                                                                                                                                                                                                                           
				</OverflowToolbar> -->                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
                <Table                                                                                                                                                                                                                                         
					id="idBookTable"					                                                                                                                                                                                                                                     
					items="{                                                                                                                                                                                                                                                  
						path: '/OnlineBookSet',                                                                                                                                                                                                                                  
						sorter: { path: 'Bookid' }                                                                                                                                                                                                                               
					}"                                                                                                                                                                                                                                                        
					class="sapFDynamicPageAlignContent"                                                                                                                                                                                                                       
					width="auto">                                                                                                                                                                                                                                             
                <columns>                                                                                                                                                                                                                                      
                    <Column width="auto"> <!-- 6글자 길이 만큼 차지 -->                                                                                                                                                                                                
                        <Text text="{i18n>labelBookid}"/>                                                                                                                                                                                                      
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="auto"> <!-- 20글자 길이만큼 차지-->                                                                                                                                                                                                 
                        <Text text="{i18n>labelCustname}"/>                                                                                                                                                                                                    
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="auto">                                                                                                                                                                                                                      
                        <Text text="{i18n>labelTelno}"/>                                                                                                                                                                                                       
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="auto">                                                                                                                                                                                                                      
                        <Text text="{i18n>labelPname1}"/>                                                                                                                                                                                                      
                    </Column>                                                                                                                                                                                                                                  
                    <Column width="auto">                                                                                                                                                                                                                      
                        <Text text="{i18n>labelVisitdat}"/>                                                                                                                                                                                                    
                    </Column>                                                                                                                                                                                                                                  
                </columns>                                                                                                                                                                                                                                     
                <items>                                                                                                                                                                                                                                        
                    <ColumnListItem type="Navigation" press="onListItemPress">                                                                                                                                                                                 
                        <cells>                                                                                                                                                                                                                                
                            <ObjectIdentifier title="{Bookid}"/>                                                                                                                                                                                               
                            <ObjectIdentifier title="{Custname}"/>                                                                                                                                                                                             
                            <ObjectAttribute text="{Telno}" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                         
                            <ObjectAttribute text="{Pname1}" />                                                                                                                                                                                                
                            <ObjectIdentifier  text="{                                                                                                                                                                                                         
                                path: 'Visitdat',                                                                                                                                                                                                              
                                type: 'sap.ui.model.odata.type.DateTime',                                                                                                                                                                                      
                                formatOptions:{                                                                                                                                                                                                                
                                    pattern: 'yyyy-MM-dd',                                                                                                                                                                                                     
                                    UTC: true                                                                                                                                                                                                                  
                                }                                                                                                                                                                                                                              
                            }"/>&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                       
                        </cells>                                                                                                                                                                                                                               
                    </ColumnListItem>                                                                                                                                                                                                                          
                    </items>                                                                                                                                                                                                                                   
                </Table>                                                                                                                                                                                                                                       
            </VBox>                                                                                                                                                                                                                                            
            </f:content>                                                                                                                                                                                                                                       
                                                                                                                                                                                                                                                               
            <!-- DynamicPage Footer -->                                                                                                                                                                                                                        
            <f:footer>                                                                                                                                                                                                                                         
                <OverflowToolbar>                                                                                                                                                                                                                              
                    <ToolbarSpacer/>                                                                                                                                                                                                                           
                    <Button type="Accept" text="Accept"/>                                                                                                                                                                                                      
                    <Button type="Reject" text="Reject"/>                                                                                                                                                                                                      
                </OverflowToolbar>                                                                                                                                                                                                                             
            </f:footer>                                                                                                                                                                                                                                        
    </f:DynamicPage>                                                                                                                                                                                                                                           
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               