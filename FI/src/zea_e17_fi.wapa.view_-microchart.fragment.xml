<c:FragmentDefinition xmlns="sap.m"                                                                                                                                                                                                                            
                      xmlns:c="sap.ui.core"                                                                                                                                                                                                                    
                      xmlns:mvc="sap.ui.core.mvc">                                                                                                                                                                                                             
                                                                                                                                                                                                                                                               
  <MicroChart id="microChart" width="100%" height="48px" size="S">                                                                                                                                                                                             
    <FlattenedDataset items="{path: 'inventorySet'}">                                                                                                                                                                                                          
      <ColumnListItem>                                                                                                                                                                                                                                         
        <cells>                                                                                                                                                                                                                                                
          <ObjectIdentifier title="{Menge}" />                                                                                                                                                                                                                 
        </cells>                                                                                                                                                                                                                                               
      </ColumnListItem>                                                                                                                                                                                                                                        
    </FlattenedDataset>                                                                                                                                                                                                                                        
    <data>                                                                                                                                                                                                                                                     
      <MicroChartData                                                                                                                                                                                                                                          
          value="{Menge}"                                                                                                                                                                                                                                      
          color="{                                                                                                                                                                                                                                             
              path: 'Menge',                                                                                                                                                                                                                                   
              formatter: '.formatMicroChartColor'                                                                                                                                                                                                              
          }"                                                                                                                                                                                                                                                   
      />                                                                                                                                                                                                                                                       
    </data>                                                                                                                                                                                                                                                    
  </MicroChart>                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
</c:FragmentDefinition>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               